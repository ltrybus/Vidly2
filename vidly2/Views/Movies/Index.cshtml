@model IEnumerable<vidly2.Models.Movie>
@{

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    /* */
}


<h2>MovieList</h2>
<div >@Html.ActionLink("Add Movie", "New", "Movies","link1", new { @class = "btn btn-primary" })</div>

<table border="1">
    <tr>
        <th>Movie</th>
        <th>Genre</th>
    </tr>

    @foreach (var movie in Model)
    {
    <tr>
        <td>@Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id }, new { id = movie.Id })</td>
        <td> @movie.Genres.GenreDescription</td>
    </tr>
    }

   


</table>



